@page
@model LoginRegisterModel
@{
    ViewData["Title"] = "Logowanie i Rejestracja";
}

<h2 class="text-center">Witamy w Restauracji!</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Zaloguj się</h3>
        <form method="post" asp-page="/Account/LoginRegister" asp-page-handler="Login">
            <div class="mb-3">
                <label asp-for="LoginInput.Email" class="form-label">Email</label>
                <input asp-for="LoginInput.Email" class="form-control" required>
                <span asp-validation-for="LoginInput.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="LoginInput.Password" class="form-label">Hasło</label>
                <input asp-for="LoginInput.Password" class="form-control" type="password" required>
                <span asp-validation-for="LoginInput.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Zaloguj się</button>
        </form>
    </div>

    <div class="col-md-6">
        <h3>Nie masz konta? Zarejestruj się!</h3>
        <form method="post" asp-page="/Account/LoginRegister" asp-page-handler="Register">
            <div class="mb-3">
                <label asp-for="RegisterInput.Email" class="form-label">Email</label>
                <input asp-for="RegisterInput.Email" class="form-control" required>
                <span asp-validation-for="RegisterInput.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RegisterInput.Password" class="form-label">Hasło</label>
                <input asp-for="RegisterInput.Password" class="form-control" type="password" required>
                <span asp-validation-for="RegisterInput.Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="RegisterInput.ConfirmPassword" class="form-label">Powtórz hasło</label>
                <input asp-for="RegisterInput.ConfirmPassword" class="form-control" type="password" required>
                <span asp-validation-for="RegisterInput.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-success">Zarejestruj się</button>
        </form>
    </div>
</div>
